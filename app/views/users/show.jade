extends ../shared/template

block content
  .profile-wrapper
    .profile-bar(style='background-image: url("/img/profile-bar/Sunset_Marina.jpg");')
      h1= user.username
    .pic-info
      .profile-pic(style='background-image: url("#{primaryPic}");')


      .info
        ul
          li
            h3 seeking
            p= user.seekingDeveloper
            p= user.seekingGender
          li
            h3 Zipcode
            p= user.zipcode
          li
            h3 profession
            p= user.developerType
          li
            h3 age
            p= user.age
    .interact
      ul
        li
          a.button-border-action(href='http://www.github.com/#{user.githubUsername}') github profile
        li
          a.button-border-action.glyphicon.glyphicon-envelope(href='mailto:#{user.email}?Subject=Hey%20there!')= user.email
        li
          a.button-border-action(href='/chat') chat with #{user.username}
        li
          a.button-border-action(href='/edit') edit profile
    #carousel-example-generic.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        each photo, i in user.photos
          if i === 0
            li.active(data-target='#carousel-example-generic', data-slide-to='0')
          if i > 0
            li(data-target='#carousel-example-generic', data-slide-to='#{i}')
      .carousel-inner
        each photo, i in user.photos
          if i === 0
            .item.active(style='background-image:url(#{photo.path})')
          if !photo.isPrimary && i > 0
            .item(style='background-image:url(#{photo.path})')

      a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
    .about-me
      p= user.aboutMe
