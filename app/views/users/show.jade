extends ../shared/template

block content
  .profile-wrapper
    .row
      .profile-bar(style='background-image: url("/img/profile-bar/Sunset_Marina.jpg");')
        h1= user.username
    .row
      .col-sm-12.col-md-1
      .col-sm-12.col-md-3
        .profile-pic(style='background-image: url("#{primaryPic}");')
        .info
          ul
            li
              h4 looking for a #{user.seekingDeveloper}
              //- p= user.seekingDeveloper
            li
              h4 seeking a #{user.seekingGender}
              //- p= user.seekingGender
            li
              h4 Zipcode #{user.zipcode}
              //- p= user.zipcode
            li
              h4 I'm a #{user.developerType} developer
            li
              h4 #{user.age} years old
      .col-sm-12.col-md-4
        #carousel-example-generic.carousel.slide(data-ride='carousel')
          ol.carousel-indicators
            each photo, i in user.photos
              if i === 0
                li.active(data-target='#carousel-example-generic', data-slide-to='0')
              if i > 0
                li(data-target='#carousel-example-generic', data-slide-to='#{i}')
          .carousel-inner
            each photo, i in user.photos
              if i === 0
                .item.active(style='background-image:url(#{photo.path})')
              if !photo.isPrimary && i > 0
                .item(style='background-image:url(#{photo.path})')

          a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
            span.glyphicon.glyphicon-chevron-right
        .row
          .about-me
            p= user.aboutMe
      .interact.col-sm-12.col-md-2
        ul
          li

            a.btn.btn-default(href='http://www.github.com/#{user.githubUsername}') github profile
          li
            a.btn.btn-default.glyphicon.glyphicon-envelope(href='mailto:#{user.email}?Subject=Hey%20there!') email
          li
            a.btn.btn-default(href='/chat') chat with #{user.username}
          li
            a.btn.btn-default(href='/users/#{user._id}/edit') edit profile
      .col-sm-12.col-md-2
