extends ../shared/template

block content
  .profile-wrapper
    each photo in user.photos
      .profile-bar(style='background-image: url("#{photo.isPrimary}");')
      h1= user.username
    .pic-info
      each photo in user.photos
        .profile-pic(style='background-image: url("#{photo.isPrimary}");')


      .info
        ul
          li
            h3 seeking
            p= user.seekingDeveloper
            p= user.seekingGender
          li
            h3 Zipcode
            p= user.zipcode
          li
            h3 profession
            p= user.developerType
          li
            h3 age
            p= user.age
    .interact
      ul
        li
          a.btn.btn-primary.btn-lg.active(href='http://www.github.com/#{user.githubUsername}') github profile
        li
          a.btn.btn-primary.btn-lg.active.glyphicon.glyphicon-envelope(href='mailto:#{user.email}?Subject=Hey%20there!')= user.email
        li
          a.btn.btn-primary.btn-lg.active(href='/chat') chat with will
        li
          a.btn.btn-primary.btn-lg(href='/edit') edit profile
    #carousel-example-generic.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#carousel-example-generic', data-slide-to='0')
        li(data-target='#carousel-example-generic', data-slide-to='1')
        li(data-target='#carousel-example-generic', data-slide-to='2')
      .carousel-inner
        each photo in user.photos
          if photo.isPrimary
            .item.active
              img(src='photo.path')
          if i > 0
            .item
              img(src='img/profile-secondary/will2.JPG')

      a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
    .about-me
      p i enjoy long walks on the beach, romantic music, fine wine, jacuzzis, matching sweaters in fall weather.
