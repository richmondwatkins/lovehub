extends ../shared/template

block content
  .button-container
    button.btn.btn-warning#messages(type='button', data-toggle='modal', data-target='#myModal') Register
    .modal.fade#myModal(tabindex='-1', role='dialog')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal') &times;
              h4.modal-title#myModalLable Modal test
            .modal-body
              p hello world
            .modal-footer
              button.submit.btn.btn-info Submit

  #compose
    .panel.panel-default#messages
      .panel-heading
        span.glyphicon.glyphicon-pencil
        h2.panel-title compose message
      .panel-body
        form(action='/messages', method='post')
          .input-group
            span.input-group-addon to
            input.form-control(type='text', name='username')
          .input-group
            span.input-group-addon subject
            input.form-control(type='text', name='subject')
          br
          textarea.form-control(name='message')
          button.btn.btn-success.glyphicon.glyphicon-send
          button.btn.btn-default.glyphicon.glyphicon-remove




  #inbox
    .panel.panel-default#messages
      .panel-heading
        span.glyphicon.glyphicon-inbox
        h2.panel-title inbox
      table.table
        thead
          tr
            td From
            td Subject
            td
            td
        tbody
        if(messages)
          each message in messages
            tr
              td= message.fromUsername
              td= message.subject
              td
                button.btn.btn-info.glyphicon.glyphicon-eye-open
              td
                button.btn.btn-warning.glyphicon.glyphicon-trash
  #sent
    .panel.panel-default#messages
      .panel-heading
        span.glyphicon.glyphicon-send
        h2.panel-title sent
      table.table
        thead
          tr
            td to
            td Subject
            td
            td
        tbody
          tr
            td horncat
            td hey babe
            td
              button.btn.btn-info.glyphicon.glyphicon-eye-open
            td
              button.btn.btn-warning.glyphicon.glyphicon-trash


block scripts
